        "/api/wallet/transfer": {
            "post": {
                "tags": [
                    "Wallet"
                ],
                "summary": "Realiza transferência entre carteiras (P2P)",
                "operationId": "16a8c35042c0240bf65581c3c2d89d8c",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "amount",
                                    "wallet_id_source",
                                    "wallet_id_destination"
                                ],
                                "properties": {
                                    "wallet_id_source": {
                                        "description": "Quem paga",
                                        "type": "string",
                                        "format": "uuid",
                                        "example": "source-uuid-123"
                                    },
                                    "wallet_id_destination": {
                                        "description": "Quem recebe",
                                        "type": "string",
                                        "format": "uuid",
                                        "example": "dest-uuid-456"
                                    },
                                    "amount": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 25
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Transferência realizada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 10
                                        },
                                        "amount": {
                                            "type": "number",
                                            "example": 25
                                        },
                                        "type": {
                                            "type": "string",
                                            "example": "transfer"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro de negócio (Saldo insuficiente, Lojista, etc)"
                    },
                    "422": {
                        "description": "Erro de validação"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
